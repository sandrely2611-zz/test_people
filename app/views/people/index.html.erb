<h1>Salesloft people</h1>

<%= link_to "Character counter", characters_path %>

<table>
  <tr>
    <th> Name </th>
    <th> Email </th>
    <th> Job Position </th>
  </tr>
  <% @people.each do |person| %>
    <% p = PersonDecorator.new(person) %>
    <tr>
      <td>
        <span> <%= p.name  %> s</span>
      </td>
      <td>
        <span> <%= p.email  %> s</span>
      </td>
      <td>
        <span> <%= p.job_position  %> s</span>
      </td>
    </tr>
  <% end %>
</table>

